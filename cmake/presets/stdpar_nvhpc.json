{
  "version": 6,
  "include": ["common.json"],
  "configurePresets": [
    {
      "name": "stdpar_nvhpc",
      "displayName": "stdpar NVHPC (nvc++) backend",
      "inherits": "build",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "nvc++",
        "PLSSVM_ENABLE_STDPAR_BACKEND": "ON",
        "PLSSVM_STDPAR_BACKEND_IMPLEMENTATION": "NVHPC"
      }
    },
    {
      "name": "stdpar_nvhpc_python",
      "displayName": "stdpar NVHPC (nvc++) backend + Python bindings",
      "inherits": "build",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "nvc++",
        "PLSSVM_ENABLE_STDPAR_BACKEND": "ON",
        "PLSSVM_STDPAR_BACKEND_IMPLEMENTATION": "NVHPC",
        "PLSSVM_ENABLE_LANGUAGE_BINDINGS": "ON",
        "PLSSVM_ENABLE_PYTHON_BINDINGS": "ON"
      }
    },
    {
      "name": "stdpar_nvhpc_test",
      "displayName": "stdpar NVHPC (nvc++) backend tests",
      "inherits": "test",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "nvc++",
        "PLSSVM_ENABLE_ASSERTS": "OFF",
        "PLSSVM_ENABLE_STDPAR_BACKEND": "ON",
        "PLSSVM_STDPAR_BACKEND_IMPLEMENTATION": "NVHPC"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "stdpar_nvhpc",
      "displayName": "stdpar NVHPC (nvc++) backend",
      "configurePreset": "stdpar_nvhpc",
      "configuration": "RelWithDebInfo",
      "inherits": "common"
    },
    {
      "name": "stdpar_nvhpc_python",
      "displayName": "stdpar NVHPC (nvc++) backend + Python bindings",
      "configurePreset": "stdpar_nvhpc_python",
      "configuration": "RelWithDebInfo",
      "inherits": "common"
    },
    {
      "name": "stdpar_nvhpc_test",
      "displayName": "stdpar NVHPC (nvc++) backend tests",
      "configurePreset": "stdpar_nvhpc_test",
      "configuration": "Debug",
      "inherits": "common"
    }
  ],
  "testPresets": [
    {
      "name": "stdpar_nvhpc_test",
      "displayName": "stdpar NVHPC (nvc++) backend all tests",
      "configurePreset": "stdpar_nvhpc_test",
      "inherits": "common"
    },
    {
      "name": "stdpar_nvhpc_backend_test",
      "displayName": "stdpar NVHPC (nvc++) backend specific tests",
      "configurePreset": "stdpar_nvhpc_test",
      "inherits": "common",
      "filter": {
        "include": {
          "name": "stdpar.*"
        }
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "stdpar_nvhpc",
      "displayName": "stdpar NVHPC (nvc++) backend workflow",
      "steps": [
        {
          "name": "stdpar_nvhpc",
          "type": "configure"
        },
        {
          "name": "stdpar_nvhpc",
          "type": "build"
        }
      ]
    },
    {
      "name": "stdpar_nvhpc_python",
      "displayName": "stdpar NVHPC (nvc++) backend + Python bindings workflow",
      "steps": [
        {
          "name": "stdpar_nvhpc_python",
          "type": "configure"
        },
        {
          "name": "stdpar_nvhpc_python",
          "type": "build"
        }
      ]
    },
    {
      "name": "stdpar_nvhpc_test",
      "displayName": "stdpar NVHPC (nvc++) test workflow",
      "steps": [
        {
          "name": "stdpar_nvhpc_test",
          "type": "configure"
        },
        {
          "name": "stdpar_nvhpc_test",
          "type": "build"
        },
        {
          "name": "stdpar_nvhpc_test",
          "type": "test"
        }
      ]
    },
    {
      "name": "stdpar_nvhpc_backend_test",
      "displayName": "stdpar NVHPC (nvc++) backend test workflow",
      "steps": [
        {
          "name": "stdpar_nvhpc_test",
          "type": "configure"
        },
        {
          "name": "stdpar_nvhpc_test",
          "type": "build"
        },
        {
          "name": "stdpar_nvhpc_backend_test",
          "type": "test"
        }
      ]
    }
  ]
}